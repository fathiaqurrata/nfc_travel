<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/seat_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/selada"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="15dp"
        android:contentDescription="Seat Icon" />

    <Button
        android:id="@+id/check_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryLight"
        android:text="Check In"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/check_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Out"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/check_out_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Out All"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status"
        android:backgroundTint="@color/colorPrimaryLighter"
        android:textColor="#000000"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <ListView
        android:id="@+id/list_students"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
